{% extends 'base.html.twig' %}

{% block title %}Favorite index{% endblock %}

{% block body %}
    <h1>Favorite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for favorite in favorites %}
            <tr>
                <td>{{ favorite.id }}</td>
                <td>{{ favorite.name }}</td>
                <td>{{ favorite.description }}</td>
                <td>{{ favorite.image }}</td>
                <td>
                    <a href="{{ path('app_favorite_show', {'id': favorite.id}) }}">show</a>
                    <a href="{{ path('app_favorite_edit', {'id': favorite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_favorite_new') }}">Create new</a>
{% endblock %}
